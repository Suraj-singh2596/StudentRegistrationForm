@{
    ViewData["Title"] = "Home Page";
}


<section>
    <div class="container mt-5">
        <div class="row">
            <div class="col-sm-12">
                <button type="button" onclick="GetStateAndCity()" class="btn btn-primary float-end mb-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Add Student</button>
            </div>
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body table-responsive">
                        <table id="StudentDatatable" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>State</th>
                                    <th>City</th>
                                    <th>About Your self</th>                                     
                                    <th>Action</th>
                                </tr>

                            </thead>
                            <tbody>                                 
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Registration Form</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="myForm">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="Name" placeholder="Name">
                    <label for="Name">Name<sup class="text-danger">*</sup></label>
                </div>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="Email" placeholder="name@example.com">
                    <label for="Email">Email<sup class="text-danger">*</sup></label>
                    <div id="validationMessage"></div>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="Mobile" placeholder="+91 9999999999">
                    <label for="Email">Mobile<sup class="text-danger">*</sup></label>
                    <div id="validationmobileMessage"></div>
                </div>
                <div class="form-floating mb-3" id="selectStateAppend">
                    <select class="form-control" id="State" placeholder="">
                        <option value="value">text</option>
                    </select>
                    <label for="State">State</label>
                </div>
                <div class="form-floating mb-3" id="selectCityAppend">
                    <select class="form-control" id="City" placeholder="">
                        <option value="">--Select City--</option>
                    </select>
                    <label for="City">City</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" placeholder="Leave a comment here" id="AboutYourself"  rows="4" cols="50" maxlength="250" style="height: 100px"></textarea>
                    <label for="AboutYourself">About Your self<sup class="text-danger">*</sup></label>
                    <div id="charCount"></div>
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text" for="inputGroupFile01">Upload<sup class="text-danger">*</sup></label>
                    <input type="file" class="form-control" accept="image/png, image/jpeg,image/jpg" id="inputGroupFile01">
                </div>
                <div id="imagePreview" class="row">
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button onclick="fnSaveUserData()" id="SubmitBtn" type="button" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.datatables.net/2.0.4/js/dataTables.min.js"></script>
    <script src="~/js/mian.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}